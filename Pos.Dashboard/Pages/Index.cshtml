@page
@model Pos.Dashboard.Pages.IndexModel
@{
    ViewData["Title"] = "POS Dashboard";
    var currentLocation = Model.Location ?? "ALL";
}

<h1>POS Dashboard</h1>

<form method="get" style="margin-bottom:1rem;">
    <label for="locationSelect">Location: </label>
    <select id="locationSelect" name="location" onchange="this.form.submit()">
        @* ALL option *@
        @if (currentLocation == "ALL")
        {
            <option value="ALL" selected>All Locations</option>
        }
        else
        {
            <option value="ALL">All Locations</option>
        }

        @* One option per location *@
        @foreach (var loc in Model.Locations)
        {
            if (currentLocation == loc.Code)
            {
                <option value="@loc.Code" selected>@loc.Name (@loc.Code)</option>
            }
            else
            {
                <option value="@loc.Code">@loc.Name (@loc.Code)</option>
            }
        }
    </select>
</form>

@if (Model.Summary is null)
{
    <p>No summary data available.</p>
}
else
{
    <div style="display:flex; gap:1rem; margin-top:1rem; flex-wrap:wrap;">
        <div style="border:1px solid #ccc; padding:1rem; border-radius:8px; min-width:180px;">
            <h3>Date</h3>
            <p>@Model.Summary.Date.ToShortDateString()</p>
        </div>
        <div style="border:1px solid #ccc; padding:1rem; border-radius:8px; min-width:180px;">
            <h3>Location</h3>
            <p>@Model.Summary.LocationCode</p>
        </div>
        <div style="border:1px solid #ccc; padding:1rem; border-radius:8px; min-width:180px;">
            <h3>Total Sales</h3>
            <p>@Model.Summary.TotalSales.ToString("C")</p>
        </div>
        <div style="border:1px solid #ccc; padding:1rem; border-radius:8px; min-width:180px;">
            <h3>Order Count</h3>
            <p>@Model.Summary.OrderCount</p>
        </div>
        <div style="border:1px solid #ccc; padding:1rem; border-radius:8px; min-width:180px;">
            <h3>Avg Order</h3>
            <p>@Model.Summary.AvgOrder.ToString("C")</p>
        </div>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        Failed to update POS status.
    </div>
}

<h2 style="margin-top:2rem;">POS App Access</h2>
@if (Model.Locations.Count == 0)
{
    <p>No locations available.</p>
}
else
{
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Store ID</th>
                <th>Location</th>
                <th>Code</th>
                <th>Status</th>
                <th style="width:160px;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loc in Model.Locations)
            {
                <tr>
                    <td>@loc.Id</td>
                    <td>@loc.Name</td>
                    <td>@loc.Code</td>
                    <td>
                        @if (loc.IsPosDisabled)
                        {
                            <span class="badge bg-secondary">Disabled</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Enabled</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-page-handler="TogglePos" class="d-inline">
                            <input type="hidden" name="id" value="@loc.Id" />
                            <input type="hidden" name="disable" value="@(loc.IsPosDisabled ? "false" : "true")" />
                            <input type="hidden" name="location" value="@currentLocation" />
                            <button class="btn btn-sm @(loc.IsPosDisabled ? "btn-success" : "btn-danger")" type="submit">
                                @(loc.IsPosDisabled ? "Enable POS" : "Disable POS")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
